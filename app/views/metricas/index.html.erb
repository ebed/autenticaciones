<h1 class="page-header">Metricas</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>

        <th>Detalle</th>

        <th colspan="3">
          <%= link_to new_metrica_path, class: "btn btn-success btn-xs" do %>
           <i class="glyphicon glyphicon-plus"> </i>
          <% end %>

        </th>
      </tr>
    </thead>
    <tbody>

    <% @metricas.each do |metrica| %>
      <tr>
        <td><%= metrica.nombre %>  </td>
        <td><%= metrica.detalle %></td>
        <td>

        <div class="btn-group  btn-group-sm" role="group" aria-label="...">
          <%= link_to metrica, class: "btn btn-info" do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>

          <%= link_to  edit_metrica_path(metrica), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to  metrica, method: :delete, data: { confirm: 'Seguro?' }, class: "btn btn-danger"  do %>
            <i class="glyphicon glyphicon-remove" ></i>
          <% end %>
        </div>


          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
