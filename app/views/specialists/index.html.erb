<p id="notice"><%= notice %></p>

<h1 class="page-header">Especialistas</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>

        <th>Apellido</th>
        <th>Fecha Nacimiento</th>

        <th colspan="3">

           <%= link_to new_specialist_path, class: "btn btn-success btn-xs" do %>
           <i class="glyphicon glyphicon-plus"> </i>
          <% end %>

        </th>
      </tr>
    </thead>
    <tbody>

    <% @specialists.each do |especialista| %>
      <tr>
        <td><%= especialista.id %></td>
        <td><%= especialista.persona.first_name %> <%= especialista.persona.second_name %></td>
        <td><%= especialista.persona.last_name %></td>
        <td><%= especialista.persona.dob %></td>

         <td>

        <div class="btn-group btn-group-sm" role="group" aria-label="...">
          <%= link_to especialista, class: "btn btn-info" do %>
            <i class="glyphicon glyphicon-eye-open"></i>
          <% end %>

          <%= link_to edit_specialist_path(especialista), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to  especialista, method: :delete, data: { confirm: 'Seguro?' }, class: "btn btn-danger"  do %>
            <i class="glyphicon glyphicon-remove" ></i>
          <% end %>
        </div>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

